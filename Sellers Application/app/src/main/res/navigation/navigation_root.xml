<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_root"
    app:startDestination="@id/fragment_login">

    <fragment
        android:id="@+id/fragment_login"
        android:name="ru.eg.sellersapplication.presentation.ui.fragments.login.FragmentLogin"
        android:label="@string/loginFragmentLabel"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/login_to_consumer"
            app:destination="@id/navigation_consumer">
            <argument
                android:name="pref_id"
                app:argType="string"/>
        </action>
        <action
            android:id="@+id/login_to_seller"
            app:destination="@id/navigation_seller">
            <argument
                android:name="pref_id"
                app:argType="string"/>
        </action>
    </fragment>

    <include app:graph="@navigation/navigation_consumer"/>

    <include app:graph="@navigation/navigation_seller"/>

    <fragment
        android:id="@+id/fragment_auth"
        android:name="ru.eg.sellersapplication.presentation.ui.fragments.auth.FragmentAuth"
        android:label="@string/authFragmentLabel"
        tools:layout="@layout/fragment_auth" />
</navigation>