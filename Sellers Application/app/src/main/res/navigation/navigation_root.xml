<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_root"
    app:startDestination="@id/fragment_login">

    <fragment
        android:id="@+id/fragment_login"
        android:name="ru.eg.sellersapplication.presentation.ui.fragments.login.FragmentLogin"
        android:label="@string/loginFragmentLabel"
        tools:layout="@layout/fragment_login">
        <argument
            android:name="pref_id"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="null"/>
        <action
            android:id="@+id/action_fragment_login_to_fragmentConsumer"
            app:destination="@id/fragmentConsumer" />
        <action
            android:id="@+id/action_fragment_login_to_fragmentSeller"
            app:destination="@id/fragmentSeller" />
    </fragment>
    <fragment
        android:id="@+id/fragmentConsumer"
        android:name="ru.eg.sellersapplication.presentation.ui.fragments.FragmentConsumer"
        android:label="fragment_consumer"
        tools:layout="@layout/fragment_consumer" />
    <fragment
        android:id="@+id/fragmentSeller"
        android:name="ru.eg.sellersapplication.presentation.ui.fragments.FragmentSeller"
        android:label="fragment_seller"
        tools:layout="@layout/fragment_seller" />

</navigation>