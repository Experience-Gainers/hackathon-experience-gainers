<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.eg.sellersapplication.presentation.ui.fragments.seller.FragmentSeller">

    <TextView
        android:id="@+id/seller_header"
        style="@style/SellersApplication.Text.Headline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/seller_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/seller_text_makeBill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/seller_text_makeBill"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/seller_header"
        app:layout_constraintTop_toBottomOf="@+id/seller_header" />

    <TextView
        android:id="@+id/seller_text_pointSumBill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/seller_text_pointSumBill"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/seller_text_makeBill"
        app:layout_constraintTop_toBottomOf="@+id/seller_text_makeBill" />

    <EditText
        android:id="@+id/seller_editText_sumOfBill"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:inputType="text"
        android:hint="@string/seller_editText_sumOfBill"
        app:layout_constraintStart_toStartOf="@+id/seller_text_pointSumBill"
        app:layout_constraintTop_toBottomOf="@+id/seller_text_pointSumBill" />

    <Button
        android:id="@+id/seller_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/seller_button"
        app:layout_constraintStart_toStartOf="@+id/seller_editText_sumOfBill"
        app:layout_constraintTop_toBottomOf="@+id/seller_editText_sumOfBill" />

</androidx.constraintlayout.widget.ConstraintLayout>