<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.eg.sellersapplication.presentation.ui.fragments.FragmentSeller">


    <TextView
        android:id="@+id/seller_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="QIWI For Buisness"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/seller_text_makeBill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Выставление счёта"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/seller_header"
        app:layout_constraintTop_toBottomOf="@+id/seller_header" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Укажите итоговую сумму покупки:"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/seller_text_makeBill"
        app:layout_constraintTop_toBottomOf="@+id/seller_text_makeBill" />

    <EditText
        android:id="@+id/seller_editText_sumOfBill"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="1000 рублей"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/seller_button_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Сканировать QR-код"
        app:layout_constraintStart_toStartOf="@+id/seller_editText_sumOfBill"
        app:layout_constraintTop_toBottomOf="@+id/seller_editText_sumOfBill" />

</androidx.constraintlayout.widget.ConstraintLayout>