<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.eg.sellersapplication.presentation.ui.fragments.consumer.FragmentConsumer">

    <TextView
        android:id="@+id/consumer_header"
        style="@style/SellersApplication.Text.Headline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="@string/consumer_header"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/consumer_card_makeQR"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        app:cardCornerRadius="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/consumer_header">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="36dp">

            <com.google.android.material.button.MaterialButton
                style="@style/SellersApplication.Text.BodyL.Regular"
                android:layout_gravity="center"
                android:id="@+id/consumer_button_makeQR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cornerRadius="16dp"
                android:text="@string/consumer_button_makeQR"/>

            <TextView
                android:layout_gravity="center"
                android:id="@+id/consumer_text_aboutQR"
                style="@style/SellersApplication.Text.BodyL.Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="@string/consumer_text_aboutQR"
                android:textSize="20sp"/>

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/consumer_image_QR"
                android:layout_width="256dp"
                android:layout_height="256dp"
                android:layout_marginTop="20dp"
                android:contentDescription="@string/consumer_image_description"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:visibility="gone"
        android:id="@+id/consumer_card_stateStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/consumer_header"
        >

        <LinearLayout
            android:id="@+id/seller_layout_stateStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="32dp"
            android:orientation="vertical"
            >

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_state_success"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/seller_text_stateSuccess"
                android:layout_marginTop="24dp"
                style="@style/SellersApplication.Text.Headline4"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SellersApplication.Text.BodyL.Regular"
                android:backgroundTint="@color/white"
                android:text="@string/seller_button_OK"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"
                android:textColor="@color/default_text_color"
                />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/consumer_card_confirmBill"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@+id/consumer_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="36dp">

            <TextView
                style="@style/SellersApplication.Text.Headline2"
                android:text="@string/consumer_text_billInformation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                style="@style/SellersApplication.Text.BodyL.Medium"
                android:text="@string/consumer_text_textBillSum" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SellersApplication.Text.BodyL.Regular"
                android:text="@string/consumer_text_billSum"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/consumer_button_confirmBill"
                android:paddingHorizontal="28dp"
                app:cornerRadius="10dp"
                style="@style/SellersApplication.Text.BodyL.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:text="@string/consumer_button_confirmBill"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>